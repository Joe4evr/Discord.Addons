<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <PropertyGroup Label="Configuration">
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
    <TreatWarningsAsErrors>False</TreatWarningsAsErrors>
    <WarningLevel>0</WarningLevel>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyName>Discord.Addons.MpGame</AssemblyName>
    <PackageId>$(AssemblyName)</PackageId>
    <RootNamespace>$(AssemblyName)</RootNamespace>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>rc-2</VersionSuffix>
    <Description>Base classes for text-based games in Discord</Description>
    <Authors>Joe4evr</Authors>
    <TargetFramework>netstandard1.3</TargetFramework>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/Joe4evr/Discord.Addons</PackageProjectUrl>
    <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>git://github.com/Joe4evr/Discord.Addons</RepositoryUrl>
    <PackageTags>discord;commands;game</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <None Include="Documentation\*.md" />
    <None Include="README.md" />
  </ItemGroup>
  <!--<ItemGroup>
      <PackageReference Include="Microsoft.ApiDesignGuidelines.Analyzers" Version="1.2.0-beta1" />
      <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="2.0.0-beta2" />
      <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="2.0.0-beta2" />
      <PackageReference Include="Microsoft.NetCore.Analyzers" Version="2.0.0-beta2" />
      <PackageReference Include="Microsoft.QualityGuidelines.Analyzers" Version="1.2.0-beta1" />
      <PackageReference Include="System.Threading.Tasks.Analyzers" Version="1.2.0-beta1" />
      <PackageReference Include="XmlDocumentationComments.Analyzers" Version="1.2.0-beta1" />
  </ItemGroup>-->
  <ItemGroup>
    <PackageReference Include="Discord.Net.Commands" Version="1.0.1" />
    <PackageReference Include="Discord.Net.WebSocket" Version="1.0.1" />
  </ItemGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <Optimize>True</Optimize>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>
  <!--<Import Project="..\Discord.Addons.Core\Discord.Addons.Core.projitems" Label="Shared" />-->
</Project>